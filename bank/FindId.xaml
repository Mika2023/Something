<Window x:Class="bank.FindId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank"
        mc:Ignorable="d"
        Title="FindId" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/1612923688_86-p-krasnii-fon-dlya-storis-107.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="Введите Id карты человека" VerticalAlignment="Top" Height="47" Width="192" Foreground="#FFFFC8C8" TextAlignment="Center" FontSize="18"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding ID}" VerticalAlignment="Center" Height="34" Width="192" Background="#FFFFC8C8" TextAlignment="Center" FontSize="18"/>
        <Button Content="Найти" HorizontalAlignment="Center" Margin="0,187,0,0" VerticalAlignment="Top" Height="32" Width="156" Background="#FFFFC8C8" FontSize="18" Command="{Binding In}"/>
    </Grid>
</Window>
