<Window x:Class="bank.Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bank"
        mc:Ignorable="d"
        Title="Table" Height="450" Width="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/1612923688_86-p-krasnii-fon-dlya-storis-107.jpg"/>
        </Grid.Background>
        <DataGrid ItemsSource="{Binding transactions}" Margin="56,38,56,38" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date}" Width="75"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Path=Sum}" Width="75"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Path=Comment}" Width="250"/>
                <DataGridTextColumn Header="Отправитель" Binding="{Binding Path=Sender.CardNum}" Width="145"/>
                <DataGridTextColumn Header="Получатель" Binding="{Binding Path=Reciever.CardNum}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
